# Beispiel-Umgebungsvariablen für das LeadRadar-Webprojekt

# SQLite-DB im prisma-Ordner
DATABASE_URL="file:./prisma/dev.db"

# ------------------------------------
# Mail / SMTP (Teilprojekt 4.1)
# ------------------------------------
# Globaler Schalter für E-Mail-Versand.
# "true" = Mails werden versucht zu senden, alles andere = deaktiviert.
MAIL_ENABLED=false

# SMTP-Basis-Konfiguration (z. B. Metanet-Account)
MAIL_SMTP_HOST=mail.example.com
MAIL_SMTP_PORT=587
MAIL_SMTP_USER=your-smtp-user
MAIL_SMTP_PASS=your-smtp-password

# Absenderadresse, die im Mail erscheint.
MAIL_FROM="LeadRadar Demo <noreply@example.com>"

# Sammeladresse für Innendienst-Benachrichtigungen.
MAIL_LEADS_NOTIFY="sales@example.com"
